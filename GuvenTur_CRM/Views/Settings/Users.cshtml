
@model IEnumerable<GuvenTur_CRM.Models.Users>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/projScripts/guventur.js"></script>
<script src="~/Scripts/jquery.mask.js"></script>

<!-- BEGIN PAGE HEADER-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
            <li class="btn-group">
                <button type="button" class="btn blue dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true"> <span> Menü </span> <i class="fa fa-angle-down"></i> </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li> <a href="/Settings/Add_New_User"> Kullanıcı Ekle </a> </li>
                    <li> <a href="/Settings/User_Levels"> Seviyeler </a> </li>
                </ul>
            </li>
            <li> <i class="fa fa-home"></i> <a href="/Companies/Index"> Anasayfa </a> <i class="fa fa-angle-right"></i> </li>
            <li> <a href="/Settings/Users"> Kullanıcılar </a> <i class="fa fa-angle-right"></i> </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption"> <i class="fa fa-edit"></i>Kullanıcı Listesi </div>
                <div class="tools"> <a href="javascript:;" class="reload"> </a> </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                    <thead>
                        <tr>
                            <th> Seviye</th>
                            <th> Ünvan </th>
                            <th> Adı, Soyadı</th>
                            <th> Telefon (Hat) </th>
                            <th> Gsm </th>
                            <th> E-mail </th>
                            <th>#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td> @item.Levels.Level_Name </td>
                                <td> @item.User_Title </td>
                                <td><a href="/Settings/User_Profile/@item.Id"> @item.User_First_Name @item.User_Last_Name</a></td>
                                <td> @item.Phone_Line</td>
                                <td> @item.Gsm</td>
                                <td> @item.Email</td>
                                @{ int id = item.Id;}
                                <td><a href="#" onclick=" $.deleteUser(@id)">Sil</a></td>
                            </tr>
                                    }
                    </tbody>
                </table>
                <div class="row">
                    <div class="col-md-6"></div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT -->