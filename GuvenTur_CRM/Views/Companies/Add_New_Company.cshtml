@{
    ViewBag.Title = "Add_New_Company";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/projScripts/guventur.js"></script>
<script src="~/Scripts/jquery.mask.js"></script>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
            <li> <i class="fa fa-home"></i> <a href="/Companies/Index"> Anasayfa </a> <i class="fa fa-angle-right"></i> </li>
            <li> <a href="/Companies/Index"> Firmalar </a> <i class="fa fa-angle-right"></i> </li>
            <li> <a href="/Companies/Add_New_Company"> Yeni Firma Ekle </a> <i class="fa fa-angle-right"></i> </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row" id="afterAlert">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>Firma Bilgileri
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <form class="form-horizontal form-row-sepe">
                        <div class="form-body">
                            <h4 class="form-section"><strong>Firma Bilgileri</strong></h4>
                            <div class="form-group">
                                <label class=" control-label col-md-3">Firma Adı</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="serviceName" id="serviceName" value="@ViewBag.Company.Service_Name" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="serviceName" id="serviceName" required />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ülke</label>
                                <div class="col-md-4">
                                    <select name="select2" id="countries" class="form-control select2me" data-placeholder="Ülke Seçiniz">
                                        @foreach (var item in ViewBag.Countries)
                                        {
                                            if (ViewBag.Company != null)
                                            {
                                                if (item.Country_Name == ViewBag.Company.Countries.Country_Name)
                                                {
                                                    <option selected value="@item.Id">@item.Country_Name</option>
                                                }
                                            }
                                            <option value="@item.Id">@item.Country_Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">İl</label>
                                <div class="col-md-4">
                                    <select name="select" id="counties" class="form-control select2me" data-placeholder="Şehir Seçiniz" onchange="$.getTownsById()">
                                        @foreach (var item in ViewBag.Counties)
                                        {
                                            if (ViewBag.Company != null)
                                            {
                                                if (item.County_Name == ViewBag.Company.Counties.County_Name)
                                                {
                                                    <option selected value="@item.Id" onchange="$.getTownsById()">@item.County_Name</option>
                                                }
                                            }
                                            <option value="@item.Id">@item.County_Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">İlçe</label>
                                <div class="col-md-4">
                                    <select name="select3" id="towns" class="form-control select2me" data-placeholder="İlçe Seçiniz">
                                        @if (ViewBag.Company != null)
                                        {
                                            foreach (var item in ViewBag.Towns)
                                            {
                                                if (item.Town_Name == ViewBag.Company.Town.Town_Name)
                                                {
                                                    <option selected value="@item.Id">@item.Town_Name</option>
                                                }
                                                <option value="@item.Id">@item.Town_Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Adres</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="address" id="addreses" value="@ViewBag.Company.Address" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="address" id="addreses" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Telefon</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="phone" id="phones" value="@ViewBag.Company.Phone" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="phone" id="phones" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Fax</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="fax" id="fax" value="@ViewBag.Company.Fax" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="fax" id="fax" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">E-Mail</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="email" id="comEmail" value="@ViewBag.Company.Email" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="email" id="comEmail" />
                                    }
                                </div>
                            </div>
                            <h4 class="form-section"><strong>Yetkili Bilgileri</strong></h4>
                            <div class="form-group">
                                <label class="control-label col-md-3">Yetkili</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="authName" id="authName" value="@ViewBag.Company.Authorized_Name" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="authName" id="authName" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Yetkili Cep</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="authPhone" id="authPhone" value="@ViewBag.Company.Authorized_Phone" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="authPhone" id="authPhone" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Yetkili E-mail</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="authEmail" id="authEmail" value="@ViewBag.Company.Authorized_Email" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="authEmail" id="authEmail" />
                                    }
                                </div>
                            </div>
                            <h4 class="form-section"><strong>Fatura Bilgileri</strong></h4>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ünvan</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="companyTitle" id="companyTitle" value="@ViewBag.Company.Company_Title" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="companyTitle" id="companyTitle" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Vergi Dairesi</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="taxOffice" id="taxOffice" value="@ViewBag.Company.Tax_Office" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="taxOffice" id="taxOffice" />
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Vergi No.</label>
                                <div class="col-md-4">
                                    @if (ViewBag.Company != null)
                                    {
                                        <input type="text" class="form-control" name="taxNumber" id="taxNumber" value="@ViewBag.Company.Tax_Number" />
                                    }
                                    else
                                    {
                                        <input type="text" class="form-control" name="taxNumber" id="taxNumber" />
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="form-actions fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-offset-3 col-md-9">
                                        @{ int id = 0;}
                                        @if (ViewBag.Company != null)
                                        {
                                            id = ViewBag.Company.Id;
                                        }
                                        <button type="button" id="btnSave" class="btn purple" onclick=" $.addOrEditCompany(@id) "><i class="fa fa-check"></i> Kaydet</button>
                                        <button type="button" class="btn default">Temizle</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
                <form action="#" class="form-horizontal form-bordered"></form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->