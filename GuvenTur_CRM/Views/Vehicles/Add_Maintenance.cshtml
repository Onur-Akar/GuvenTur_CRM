@{
    ViewBag.Title = "Add_Maintenance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/projScripts/guventur.js"></script>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
            <li> <i class="fa fa-home"></i> <a href="/COmpanies/Index"> Anasayfa </a> <i class="fa fa-angle-right"></i></li>
            <li> <a href="/Vehicles/Vehicles"> Araçlar </a> <i class="fa fa-angle-right"></i></li>
            <li> <a href="/Vehicles/Add_Maintenance"> Bakım Ekle </a> <i class="fa fa-angle-right"></i></li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>Bakım Bilgileri
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <form action="#" class="form-horizontal form-row-sepe">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="control-label col-md-3">Tarih</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="username1" id="maintenanceDate">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Güzergah</label>
                                <div class="col-md-4">
                                    <select name="select" id="services" class="form-control select2me" onchange="$.getVehiclesInfoById('vehicle')" data-placeholder="Select...">
                                        @foreach (var item in ViewBag.Services)
                                        {
                                            <option value="@item.Id">@item.Service_Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Plaka</label>
                                <div class="col-md-4">
                                    <select name="select2" id="plates" class="form-control select2me" data-placeholder="Select..."></select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">KM</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="username2_input2" id="vehicleKm">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Bakım Şekli</label>
                                <div class="col-md-4">
                                    <select name="select" id="maintenanceType" class="form-control select2me" data-placeholder="Select...">
                                        @foreach (var item in ViewBag.Maintenance_Types)
                                        {
                                            <option value="@item.Id">@item.Maintenance_Type</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ödeme</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="username2_input2" id="payment">
                                </div>
                            </div>
                        </div>
                        <div class="form-actions fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="button" class="btn purple" onclick="$.addVehicleMaintenance()"><i class="fa fa-check"></i> Kaydet</button>
                                        <button type="button" class="btn default">Temizle</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
                <form action="#" class="form-horizontal form-bordered"></form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->