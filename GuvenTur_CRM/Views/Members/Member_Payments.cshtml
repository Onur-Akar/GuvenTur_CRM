@{
    ViewBag.Title = "Member_Payments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/projScripts/guventur.js"></script>
<script src="~/Scripts/jquery.mask.js"></script>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
            <li> <i class="fa fa-home"></i> <a href="/Companies/Index"> Anasayfa </a> <i class="fa fa-angle-right"></i> </li>
            <li> <a href="/Members/Members"> Üyeler </a> <i class="fa fa-angle-right"></i> </li>
            <li> <a href="/Members/Member_Payments"> Ödeme Ekle </a> <i class="fa fa-angle-right"></i> </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-reorder"></i>Ödeme Bilgileri
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <form action="#" class="form-horizontal form-row-sepe">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="control-label col-md-3">Tarih</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="paymentDate" id="paymentDate">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Saat</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="paymentTime" id="paymentTime">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Üye Grubu</label>
                                <div class="col-md-4">
                                    <select name="select" id="memberGroups" class="form-control select2me" onchange="$.getMembersByGroupId()" data-placeholder="Select...">
                                        <option>Seçiniz</option>
                                        @foreach (var item in @ViewBag.Member_Groups)
                                        {
                                            <option value="@item.Id">@item.Member_Group_Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Üye Adı</label>
                                <div class="col-md-4">
                                    <select name="select2" id="members" class="form-control select2me" data-placeholder="Select...">
                                        <option>Seçiniz</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ödeme Şekli</label>
                                <div class="col-md-4">
                                    <select name="select" id="paymentType" class="form-control select2me" data-placeholder="Select...">
                                        <option>Seçiniz</option>
                                        @foreach (var item in ViewBag.Payment_Types)
                                        {
                                            <option value="@item.Id">@item.Payment_Type</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">Ödeme</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="payment" id="payment">
                                </div>
                            </div>
                        </div>
                        <div class="form-actions fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-offset-3 col-md-9">
                                        <button type="button" class="btn purple" onclick="$.addMemberPayment()"><i class="fa fa-check"></i> Kaydet</button>
                                        <button type="button" class="btn default">Temizle</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
                <form action="#" class="form-horizontal form-bordered"></form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>
<!-- END PAGE CONTENT-->